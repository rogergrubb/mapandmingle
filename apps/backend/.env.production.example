# Database
DATABASE_URL=postgresql://user:password@host:5432/mapmingle

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=mapmingle-uploads

# Email (Resend)
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@mapmingle.app

# Anthropic (for AI features)
ANTHROPIC_API_KEY=sk-ant-...

# Expo Push Notifications
EXPO_ACCESS_TOKEN=

# CORS Configuration
ALLOWED_ORIGINS=https://mapmingle.app,https://www.mapmingle.app
FRONTEND_URL=https://mapmingle.app

# Server Configuration
NODE_ENV=production
PORT=3000

# Logging
LOG_LEVEL=info
